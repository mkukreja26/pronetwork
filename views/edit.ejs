<% include partials/header %>

<div class="ui main text container segment">
    
    <h1>Edit <%= editproduct.name %> Information</h1>

    <form class="ui form" name="newEntryForm" action="/products/<%= editproduct._id %>?_method=PUT" method="POST" onsubmit="return confirm('Do you really want to update the form?')">
        <div class="field">
                <label>Product Name</label>
                <input type="text" name="product[name]"  value="<%= editproduct.name %>">
        </div>
    
        <div class="field">
                <label>Product Image</label>
                <input type="text" name="product[image]" value="<%= editproduct.image %>">
        </div>

        <div class="field">
                <label>Text</label>
                <textarea name="product[body]" ><%= editproduct.body %></textarea>
        </div>

        <button class="ui inverted green button">Update</button>
    </form>

</div>
<% include partials/footer %>