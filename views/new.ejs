<% include partials/header %>

<div class="ui main text container segment">
    
    <h1>Add New Product Item</h1>

    <form class="ui form" name="newEntryForm" action="/products" method="POST" onsubmit="return confirm('Do you really want to submit the form?')">
        <div class="field">
                <label>Product Name</label>
                <input type="text" name="product[name]" placeholder="Product Name">
        </div>
    
        <div class="field">
                <label>Product Image</label>
                <input type="text" name="product[image]" placeholder="Product Image">
        </div>

        <div class="field">
                <label>Text</label>
                <textarea name="product[body]" placeholder="Product Description"></textarea>
        </div>

        <button class="ui inverted green button">Submit</button>
    </form>

</div>
<% include partials/footer %>